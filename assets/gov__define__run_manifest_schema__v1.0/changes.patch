+# frozen_string_literal: true
+
+require "json_schemer"
+
+class RunManifestValidator
+  SCHEMA_PATH = File.join(__dir__, "..", "schemas", "run_manifest.schema.json")
+
+  def initialize
+    @schema = JSONSchemer.schema(File.read(SCHEMA_PATH))
+  end
+
+  def validate(manifest_hash)
+    errors = @schema.validate(manifest_hash).to_a
+    {
+      valid: errors.empty?,
+      errors: errors.map { |e| "#{e['data_pointer']}: #{e['type']}" }
+    }
+  end
+
+  def validate!(manifest_hash)
+    result = validate(manifest_hash)
+    unless result[:valid]
+      raise InvalidManifestError, "Validation failed: #{result[:errors].join(', ')}"
+    end
+    true
+  end
+
+  class InvalidManifestError < StandardError; end
+end
