+{
+  "$schema": "https://json-schema.org/draft/2020-12/schema",
+  "$id": "https://diffforge.dev/schemas/run_manifest.schema.json",
+  "title": "DiffForge Run Manifest",
+  "description": "Schema for documenting AI Run sessions that produce change assets",
+  "type": "object",
+  "required": ["run_id", "timestamp", "model", "prompt", "gate_result"],
+  "properties": {
+    "run_id": {
+      "type": "string",
+      "pattern": "^RUN-\\d{4}-[A-F0-9]{4}$",
+      "description": "Unique Run identifier"
+    },
+    "timestamp": {
+      "type": "string",
+      "format": "date-time",
+      "description": "ISO 8601 timestamp of Run execution"
+    },
+    "model": {
+      "type": "string",
+      "description": "AI model identifier used for generation"
+    },
+    "prompt": {
+      "type": "string",
+      "minLength": 10,
+      "description": "The prompt that initiated this Run"
+    },
+    "duration_seconds": {
+      "type": "number",
+      "minimum": 0,
+      "description": "Execution duration in seconds"
+    },
+    "token_usage": {
+      "type": "object",
+      "properties": {
+        "input": { "type": "integer", "minimum": 0 },
+        "output": { "type": "integer", "minimum": 0 }
+      }
+    },
+    "gate_result": {
+      "type": "object",
+      "required": ["pass", "checks"],
+      "properties": {
+        "pass": { "type": "boolean" },
+        "checks": {
+          "type": "array",
+          "items": {
+            "type": "object",
+            "required": ["name", "result"],
+            "properties": {
+              "name": { "type": "string" },
+              "result": { "enum": ["PASS", "FAIL", "SKIP"] }
+            }
+          }
+        }
+      }
+    },
+    "artifacts": {
+      "type": "array",
+      "items": { "type": "string" },
+      "description": "List of files produced by this Run"
+    }
+  }
+}
