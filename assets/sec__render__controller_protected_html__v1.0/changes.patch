+# frozen_string_literal: true
+
+module ProtectedRendering
+  extend ActiveSupport::Concern
+
+  included do
+    before_action :verify_controller_route
+    before_action :enforce_csrf_protection
+    after_action :add_security_headers
+  end
+
+  private
+
+  def verify_controller_route
+    unless request.env["action_dispatch.request.path_parameters"].present?
+      render_forbidden("Direct template access is not permitted")
+    end
+  end
+
+  def enforce_csrf_protection
+    return if request.get? || request.head?
+
+    unless valid_authenticity_token?(session, form_authenticity_param) ||
+           valid_authenticity_token?(session, request.headers["X-CSRF-Token"])
+      render_forbidden("Invalid CSRF token")
+    end
+  end
+
+  def add_security_headers
+    response.headers["X-Frame-Options"] = "DENY"
+    response.headers["X-Content-Type-Options"] = "nosniff"
+    response.headers["X-Rendered-By"] = "controller"
+    response.headers["Content-Security-Policy"] = "default-src 'self'"
+  end
+
+  def render_forbidden(message)
+    respond_to do |format|
+      format.html { render plain: "403 Forbidden", status: :forbidden }
+      format.json { render json: { error: message }, status: :forbidden }
+    end
+  end
+end
