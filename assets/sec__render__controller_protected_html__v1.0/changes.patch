+class TemplateAccessGuard
+  TEMPLATE_EXTENSIONS = %w[.erb .haml .slim .html].freeze
+
+  def initialize(app)
+    @app = app
+  end
+
+  def call(env)
+    path = env["PATH_INFO"]
+
+    if direct_template_request?(path)
+      body = { error: "Direct template access forbidden" }.to_json
+      return [403, { "Content-Type" => "application/json" }, [body]]
+    end
+
+    @app.call(env)
+  end
+
+  private
+
+  def direct_template_request?(path)
+    TEMPLATE_EXTENSIONS.any? { |ext| path.end_with?(ext) }
+  end
+end
