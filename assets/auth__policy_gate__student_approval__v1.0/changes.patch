+# frozen_string_literal: true
+
+class StudentApprovalPolicy
+  attr_reader :user, :resource
+
+  def initialize(user, resource)
+    @user = user
+    @resource = resource
+  end
+
+  def access?
+    return true if user.admin?
+    return false unless user.student?
+    user.approved?
+  end
+
+  def request_approval?
+    user.student? && !user.approved? && !user.pending_approval?
+  end
+
+  class Scope
+    def initialize(user, scope)
+      @user = user
+      @scope = scope
+    end
+
+    def resolve
+      if @user.admin?
+        @scope.all
+      elsif @user.approved?
+        @scope.where(visibility: [:public, :student])
+      else
+        @scope.where(visibility: :public)
+      end
+    end
+  end
+end
