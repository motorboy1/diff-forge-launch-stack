+module StudentGated
+  extend ActiveSupport::Concern
+
+  included do
+    before_action :enforce_student_approval, if: :student_resource?
+  end
+
+  private
+
+  def enforce_student_approval
+    policy = StudentApprovalPolicy.new(current_user, requested_resource)
+    unless policy.access?
+      redirect_to approval_pending_path, alert: "Your account is pending approval."
+    end
+  end
+
+  def student_resource?
+    false # Override in controllers that need gating
+  end
+end
