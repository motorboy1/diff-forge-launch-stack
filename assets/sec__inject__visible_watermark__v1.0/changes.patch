+# frozen_string_literal: true
+
+module Watermarkable
+  extend ActiveSupport::Concern
+
+  included do
+    after_action :inject_watermark, if: :html_response?
+  end
+
+  private
+
+  def inject_watermark
+    return unless response.body.present?
+    return unless watermark_enabled?
+
+    watermark_html = build_watermark_html
+    response.body = response.body.sub("</body>", "#{watermark_html}</body>")
+  end
+
+  def build_watermark_html
+    text = watermark_text
+    <<~HTML
+      <div id="df-watermark" style="position:fixed;bottom:8px;right:8px;z-index:999999;
+        font-size:10px;color:rgba(0,0,0,0.15);pointer-events:none;
+        font-family:monospace;user-select:none;letter-spacing:0.5px;">
+        #{ERB::Util.html_escape(text)}
+      </div>
+    HTML
+  end
+
+  def watermark_text
+    "DiffForge Asset #{controller_name}##{action_name} | #{Time.current.strftime('%Y-%m-%d')}"
+  end
+
+  def watermark_enabled?
+    Rails.configuration.respond_to?(:watermark_enabled) && Rails.configuration.watermark_enabled
+  end
+
+  def html_response?
+    response.content_type&.include?("text/html")
+  end
+end
