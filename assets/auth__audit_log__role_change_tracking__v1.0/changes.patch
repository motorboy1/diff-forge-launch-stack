+# frozen_string_literal: true
+
+class RoleAuditLog < ApplicationRecord
+  belongs_to :actor, class_name: "User"
+  belongs_to :target, class_name: "User"
+
+  validates :old_role, :new_role, :reason, presence: true
+
+  scope :recent, -> { order(created_at: :desc).limit(100) }
+  scope :for_user, ->(user) { where(target: user) }
+  scope :by_actor, ->(actor) { where(actor: actor) }
+
+  def self.track_change(actor:, target:, old_role:, new_role:, reason:, ip_address: nil)
+    create!(
+      actor: actor,
+      target: target,
+      old_role: old_role,
+      new_role: new_role,
+      reason: reason,
+      ip_address: ip_address,
+      changed_at: Time.current
+    )
+  end
+
+  def escalation?
+    role_weight(new_role) > role_weight(old_role)
+  end
+
+  private
+
+  def role_weight(role)
+    { "viewer" => 0, "student" => 1, "member" => 2, "admin" => 3, "super_admin" => 4 }.fetch(role.to_s, 0)
+  end
+end
